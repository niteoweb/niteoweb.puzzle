<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <!-- reference theme file (static HTML template) -->
    <theme href="index.html" />

    <!-- Remove skype call div -->
    <drop css:theme="#skype" />

    <!-- for frontpage only include rules specific for it -->
    <rules css:if-content="body.section-front-page">
      <xi:include href="frontpage-rules.xml" />
    </rules>

    <!-- for pages other than front page include rules for subpages -->
    <rules css:if-not-content="body.section-front-page">
      <xi:include href="subpage-rules.xml" />
    </rules>

    <!-- footer rules -->
    <replace css:theme-children="#FooterPortletA" content-children="//*[@id='footer-wrapper']/div[1]"/>
    <replace css:theme-children="#FooterPortletB" content-children="//*[@id='footer-wrapper']/div[2]"/>
    <replace css:theme-children="#FooterPortletC" content-children="//*[@id='footer-wrapper']/div[3]"/>
    <replace css:theme-children="#FooterPortletD" content-children="//*[@id='footer-wrapper']/div[4]"/>
</rules>
