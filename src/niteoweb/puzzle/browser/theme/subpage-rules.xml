<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- change header and body BG for the one that is used on subpages -->
    <drop css:theme="body" attributes="class" />
    <drop css:theme="#page-title" />
    <drop css:theme="#slogan" />

    <!-- change header's ID attribute -->
    <prepend css:theme="#header-index"><xsl:attribute name="id">header-subpage</xsl:attribute></prepend>

    <drop css:content="h1#parent-fieldname-title" attributes="*" />

    <!-- NOTE: refer to the original header's ID, not to the new one -->
    <replace css:theme-children="#header-index > div:first-child" css:content="h1#parent-fieldname-title" />

    <!-- copy portal breadcrumbs -->
    <replace css:theme-children="#breadcrumbs-navig" css:content-children="#portal-breadcrumbs"/>

    <!-- copy all content into theme -->
    <replace css:content-children="#content-core" css:theme-children="#main-content"/>

</rules>